@using DataModels
@model RiverCruise.Models.Report.ReportsViewModel

@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="pull-right">
        <form class="navbar-form" role="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="searchText" id="searchText">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
    <h2>
        Reports
        
    </h2>

    <hr />
    <div class="container-fluid">
        @foreach (var report in Model.Reports)
        {
            <div class="container-fluid">
                <h4>
                    @report.Ref

                    @if (report.Ship != null)
                    {
                        <span class="pull-right">
                         
                            <small>@report.Ship.Name </small>
                        </span>
                    }
                </h4>
                <p><span class="pull-right"><em>@report.DateString</em></span>
                    @report.Remarks
                </p>
            </div>
            <hr />
        }
    </div>
</div>
