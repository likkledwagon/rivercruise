@model RiverCruise.Models.CompanyManagement.NewCompanyModel

@{
    ViewBag.Title = "New Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>New Company</h2>
    <hr/>
    <br/>
    @using (Html.BeginForm("NewCompany", "CompanyManagement", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        if (!ViewData.ModelState.IsValid)
        {
            <div class="bs-callout bs-callout-danger text-danger ">
                @Html.ValidationSummary()
            </div>
        }

        if (Model.CompanyAdded)
        {
            <div class="bs-callout bs-callout-succes text-success ">
                <ul>
                    <li>Company added</li>
                </ul>
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => Model.Name, new { @class = "form-control", placeholder = "Name" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.Name)</span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Website, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => Model.Website, new { @class = "form-control", placeholder = "Website" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.Website)</span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CrewingAgent, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.CrewingAgent, new { @class = "form-control", placeholder = "Crewing agent" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.CrewingAgent)</span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CrewingAgentWebsite, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.CrewingAgentWebsite, new { @class = "form-control", placeholder = "Crewing agent website" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.CrewingAgentWebsite)</span>
            </div>
        </div>


        <br />
        <div class="form-group">
            <div class="col-sm-3 ">
                <span>@Html.ActionLink("Back to companies", "Index", "Company", null, new { @class = "btn btn-block btn-warning" })</span>
            </div>
            <div class="col-sm-9">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
        </div>
    }

</div>