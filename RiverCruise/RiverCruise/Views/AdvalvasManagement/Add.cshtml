@model RiverCruise.Models.Advalvas.AddAdvalvasModel

@{
    ViewBag.Title = "New Advalvas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>New Advalvas</h2>
    <hr/>
    <br/>
    @if (!ViewData.ModelState.IsValid)
    {
    <div class="bs-callout bs-callout-danger text-danger ">
        @Html.ValidationSummary()
    </div>
    }

    @using (Html.BeginForm("Add", "AdvalvasManagement", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Title" })
                <span class="text-danger">@Html.ValidationMessageFor(model => model.Title)</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 ">
                <span>@Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-block btn-warning" })</span>
            </div>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary form-control">Add</button>
            </div>
        </div>
    }
</div>